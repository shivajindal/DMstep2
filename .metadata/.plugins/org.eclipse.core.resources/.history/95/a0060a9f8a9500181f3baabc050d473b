package com.stackroute.demo1;

public class StrBuff {

	void reverse(String s) {
        int length = s.length(); // string length
      for(int i=1;i<s.length()+1;i++) 
      {
          char a= s.charAt(length-i);//converting string into char backwards
        System.out.print(a); 
      }
    }
	
	public static void main(String []args){
	   	 
		 String input="london";  
		 reverse(input);
		 
	}
}